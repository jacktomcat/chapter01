
<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>操作</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td>
        <%= link_to 'Show', article_path(article) %> &nbsp; 
        <%= link_to 'Edit', edit_article_path(article) %> &nbsp;
        <%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>   
      </td>
    </tr>
  <% end %>
</table>

<hr/>

<%= link_to '列表', articles_path %>
<%= link_to '新增', new_article_path %>

